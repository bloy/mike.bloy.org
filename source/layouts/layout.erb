<% wrap_layout :base do %>
  <header id="page_header">
    <h1>Mike Bloy</h1>
  </header>

  <div id="page_content">
    <nav id="content_links" class="nav_links">
    <ul>
      <% data.navigation.main.each do |link| %>
        <%= nav_link link %>
      <% end %>
    </ul>
    </nav>

    <article>
      <%= yield %>
    </article>

    <nav id="social_links" class="nav_links">
    <ul>
      <%= email_nav_link "email", "Email", data.contact.email %>
      <% data.contact.social.each do |social| %>
        <%= nav_link social %>
      <% end %>
    </ul>
    </nav>
  </div>

  <footer id="page_footer">
    <p>
    Created with <%= link_to "Middleman", "http://middlemanapp.com" %>,
    HTML <i class="fa fa-html5" title="HTML 5"></i>,
    and CSS <i class="fa fa-css3" title="CSS 3"></i>.
    </p>

    <p>
    Source available on
    <a href="https://github.com/bloy/mike.bloy.org"><i class="fa fa-github" title="GitHub"></i>
      GitHub</a>.
    </p>
  </footer>
<% end %>

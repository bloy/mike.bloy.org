<% wrap_layout :base do %>
  <header id="page_header">
    <h1>Mike Bloy</h1>
  </header>

  <div id="page_content">
    <aside id="page_navigation">
      <nav id="contentlinks">
      <ul class="fa-ul">
        <%= nav_link_to "Intro", "/" %>
        <%= nav_link_to "Professional", "/professional.html" %>
        <%= nav_link_to "Personal", "/personal.html" %>
        <%= nav_link_to "Credits", "/credits.html" %>
      </ul>
      </nav>

      <nav id="links">
      <ul class="fa-ul">
        <%= email_nav_link_to "Email", data.contact.email, 'envelope-o' %>
        <% data.contact.social.each do |social| %>
          <%= social_nav_link_to social %>
        <% end %>
      </ul>
      </nav>
    </aside>

    <article>
      <%= yield %>
    </article>
  </div>

  <footer id="page_footer">
    <p>
    Created with <%= link_to "Middleman", "http://middlemanapp.com" %>,
    HTML <i class="fa fa-html5" title="HTML 5"></i>,
    and CSS <i class="fa fa-css3" title="CSS 3"></i>.
    </p>

    <p>
    Source available on
    <a href="https://github.com/bloy/mike.bloy.org"><i class="fa fa-github" title="GitHub"></i>
      GitHub</a>.
    </p>
  </footer>
<% end %>

<% wrap_layout :base do %>
  <header id="page_header">
    <h1>Mike Bloy</h1>
  </header>

  <div id="page_content">
    <nav id="content_links" class="nav_links">
    <ul>
      <% data.navigation.main.each do |link| %>
        <%= nav_link link %>
      <% end %>
    </ul>
    </nav>

    <div id="article_content">
      <article>
      <%= yield %>
      </article>

      <nav id="social_links" class="nav_links">
      <ul>
        <%= email_nav_link %>
        <% data.contact.social.each do |social| %>
          <%= nav_link social %>
        <% end %>
      </ul>
      </nav>
    </div>
  </div>

  <footer id="page_footer">
    <p>
    Created with <%= link_to "Middleman", "http://middlemanapp.com" %>,
    HTML 5, and CSS 3. Source available on
    <a href="https://github.com/bloy/mike.bloy.org">GitHub</a>.
    </p>
  </footer>
<% end %>

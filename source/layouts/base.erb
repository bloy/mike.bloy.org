<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">

    <title><%= main_title(current_page.data.title) %></title>
    <%= favicon_tag 'images/favicon.ico' %>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag 'fonts/tex-gyre-pagella/stylesheet' %>
    <%= stylesheet_link_tag 'fonts/tex-gyre-adventor/stylesheet' %>
    <%= javascript_include_tag 'modernizr.min' %>
    <%= javascript_include_tag 'modernizr-extra' %>
  </head>
  <body class="<%= page_classes %>" role="document">

    <div id="page_container">
      <%= yield %>
    </div>
    <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>
    <%= javascript_include_tag "all" %>
  </body>
</html>
